{
  "openapi": "3.0.1",
  "info": {
    "title": "MicroserviceNogeco",
    "version": "1.0"
  },
  "paths": {
    "/notification": {
      "post": {
        "tags": [
          "MicroserviceNogeco"
        ],
        "description": "Este endpoint recebe os dados do evento e envia uma notificação para os usuários com base no filtro.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Notification"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/notification/emergency": {
      "post": {
        "tags": [
          "MicroserviceNogeco"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Notification"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/notification/canceled_event": {
      "post": {
        "tags": [
          "MicroserviceNogeco"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/presence/accept-work": {
      "post": {
        "tags": [
          "Presence_Control"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Frellancer"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Frellancer": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nome": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "numeroTelefone": {
            "type": "string",
            "nullable": true
          },
          "skills": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "diasPreferidos": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "isEmergecy": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "Notification": {
        "type": "object",
        "properties": {
          "nomeEmpresa": {
            "type": "string",
            "nullable": true
          },
          "valorPago": {
            "type": "string",
            "nullable": true
          },
          "nomeEvento": {
            "type": "string",
            "nullable": true
          },
          "descricaoEvento": {
            "type": "string",
            "nullable": true
          },
          "dataEvento": {
            "type": "string",
            "format": "date-time"
          },
          "localEvento": {
            "type": "string",
            "nullable": true
          },
          "horaEvento": {
            "type": "string",
            "nullable": true
          },
          "skill_1": {
            "type": "string",
            "nullable": true
          },
          "diaSemana": {
            "type": "string",
            "nullable": true
          },
          "isEmergency": {
            "type": "boolean"
          },
          "skills": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true,
            "readOnly": true
          },
          "diasDaSemana": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true,
            "readOnly": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}